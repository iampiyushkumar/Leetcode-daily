class Solution {
public:
    int longestSubarray(vector<int>& nums) {
        int cnt=1;
        int n=nums.size();
        int l=0;
        int maxi=0;
        for(int i=0;i<n;i++)
        {
            if(nums[i]==0) cnt--;
            while(cnt<0)
            {
                if(nums[l]==0) cnt++;
                l++;
            }
            maxi=max(maxi,i-l);
        }
        return maxi;
    }
};
