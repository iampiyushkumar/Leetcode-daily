class Solution {
public:
    int minimumArea(vector<vector<int>>& grid) {
        int n=grid.size();
        int m=grid[0].size();
        int mini=INT_MAX;
        int maxi=INT_MIN;
        int minj=INT_MAX;
        int maxj=INT_MIN;
        for(int i=0;i<n;i++)
        {
            for(int j=0;j<m;j++)
            {
                if(grid[i][j]==1)
                {
                    mini=min(mini,i);
                    maxi=max(maxi,i);
                    minj=min(minj,j);
                    maxj=max(maxj,j);
                }
            }
        }
        return (maxi-mini+1)*(maxj-minj+1);
    }
};
